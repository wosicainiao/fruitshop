<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.wc.project.fruitshop.mapper.ShopUserMapper">
    <resultMap id="BaseResultMap" type="com.wc.project.fruitshop.entity.ShopUser">
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="username" jdbcType="VARCHAR" property="username"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="gender" jdbcType="BIT" property="gender"/>
        <result column="birthday" jdbcType="TIMESTAMP" property="birthday"/>
        <result column="mobile" jdbcType="VARCHAR" property="mobile"/>
        <result column="nickname" jdbcType="VARCHAR" property="nickname"/>
        <result column="avatar" jdbcType="VARCHAR" property="avatar"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="money" jdbcType="DECIMAL" property="money" />
    </resultMap>
    <sql id="Base_Column_List">
        id,username,password,gender,birthday,mobile,nickname,avatar,create_time,money
    </sql>
    <select id="selectUserById" resultType="com.wc.project.fruitshop.entity.ShopUser">
        SELECT
            <include refid="Base_Column_List" />
        FROM
            shop_user
        WHERE
            id = #{id}
    </select>
    <select id="selectUserByUsername" resultType="com.wc.project.fruitshop.entity.ShopUser">
        SELECT
        <include refid="Base_Column_List" />
        FROM
        shop_user
        WHERE
        username = #{username}
    </select>
    <insert id="insertUser" parameterType="com.wc.project.fruitshop.entity.ShopUser">
        INSERT INTO
          shop_user
        (username,password,gender,birthday,mobile,nickname,avatar,create_time)VALUES
         (username,password,gender,birthday,mobile,nickname,avatar,now())
    </insert>
</mapper>